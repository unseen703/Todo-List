<main>
    <h1>The Todos App</h1>
    <div class="userinput">
        
    <div id="sign">
        <form action="/signup" method="post" class="sign">
            <h2>Signup Form</h2>
            <input type="text" name="username" placeholder="username"   class="user-input">
            <input type="password" name="password" placeholder="password"  class="user-input">
            <input type="submit" value="Signup" class="submit">
        </form>
